<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id='@+id/thetext2'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entername"
        tools:ignore="MissingConstraints"
        />

    <Button
        android:id="@+id/clickButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_button3"
        android:textAllCaps="true"
        android:textColor="#318214"
        android:onClick="method"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/entername"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/clickButton4"
        app:layout_constraintBottom_toTopOf="@id/thetext2"
        android:inputType="text"/>

    <Button
        android:id="@+id/clickButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_button4"
        android:textAllCaps="true"
        android:textColor="#318214"
        android:onClick="method"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clickButton3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id='@+id/thetext3'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thetext2" />

</androidx.constraintlayout.widget.ConstraintLayout>